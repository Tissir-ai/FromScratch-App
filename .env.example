##################################################
########## Common Environment Variables ##########
##################################################

# Email SMTP configuration for sending emails
GMAIL_USER="your-gmail@gmail.com"
GMAIL_APP_PASSWORD="your-gmail-app-password"

##################################################
########## Backend Environment Variables ##########
##################################################

APP_NAME=fromscratch
APP_ENV=dev
SECRET_KEY=dev_change_me
ACCESS_TOKEN_EXPIRE_MINUTES=60

# JWT Configuration - MUST match FromScratch-auth JWT_ACCESS_SECRET
JWT_ACCESS_SECRET=your_jwt_secret_here_change_in_production

# Local development Mongo (used by docker-compose) - remove when deploying to production (Docker)
MONGODB_URI=mongodb://localhost:27017/fromscratch

# MongoDB root credentials (used by docker-compose)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin2025
MONGO_INITDB_DATABASE=fromscratch

# CORS for local frontends
CORS_ORIGINS=

# LLM (local/placeholder)
MODEL_PROVIDER=openai
OPENAI_API_KEY=
LITELLM_MODEL=gpt-4o-mini

##################################################
########## Frontend Environment Variables ########
##################################################

# JWT secret for server-side user sending
NEXT_PUBLIC_JWT_ACCESS_SECRET=your_jwt_secret_here_change_in_production

# Auth API (FromScratch-auth server)
NEXT_PUBLIC_AUTH_API_BASE_URL=http://localhost:4000/api

# Main API (FromScratch-server)
NEXT_PUBLIC_MAIN_API_BASE_URL=http://localhost:8000/api

################################################
########## Auth Environment Variables ##########
################################################

# Database connection string for Prisma (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/fromscratch_auth?schema=public"

# JWT secret and config (no refresh tokens)
JWT_ACCESS_SECRET="replace-with-strong-access-secret"
JWT_ACCESS_EXPIRES_IN="5h"

# CORS allowed origins
CORS_ORIGIN="http://localhost:3000"

# App
PORT=4000
NODE_ENV="development"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:4000/api/auth/google/callback"

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GITHUB_REDIRECT_URI="http://localhost:4000/api/auth/github/callback"


# Stripe configuration
# Secret key used by the server to call Stripe APIs
STRIPE_SECRET_KEY="sk_test_your_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
