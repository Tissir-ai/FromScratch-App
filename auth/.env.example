# Database connection string for Prisma (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/fromscratch_auth?schema=public"

# JWT secret and config (no refresh tokens)
JWT_ACCESS_SECRET="replace-with-strong-access-secret"
JWT_ACCESS_EXPIRES_IN="15m"

# Cors allowed origins
CORS_ORIGIN ="http://localhost:3000"

# App
PORT=4000
NODE_ENV = "development"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:4000/api/auth/google/callback"

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GITHUB_REDIRECT_URI="http://localhost:4000/api/auth/github/callback"

# Gmail SMTP for password reset emails
GMAIL_USER="your-gmail@gmail.com"
GMAIL_APP_PASSWORD="your-gmail-app-password"

# Stripe configuration
# Secret key used by the server to call Stripe APIs
STRIPE_SECRET_KEY="sk_test_your_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
